services:
  nango-db:
    image: postgres:14
    container_name: nango-db
    restart: always
    environment:
      POSTGRES_USER: nango
      POSTGRES_PASSWORD: nango
      POSTGRES_DB: nango
    volumes:
      - nango-db-data:/var/lib/postgresql/data

  nango:
    image: nangohq/nango-server:latest
    container_name: nango
    restart: always
    depends_on:
      - nango-db
    env_file:
      - .env
    ports:
      - "3003:3003"
    labels:
      - "traefik.enable=true"
      - "traefik.http.routers.nango.rule=Host(`connect.streamline-internal.com`)"
      - "traefik.http.services.nango.loadbalancer.server.port=3003"
      - "traefik.docker.network=traefik_proxy"
    networks:
      - nango-net
      - traefik_proxy

volumes:
  nango-db-data:

networks:
  nango-net:
  traefik_proxy:
    external: true
